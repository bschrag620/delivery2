<p id="notice"><%= notice %></p>



<% if flash[:message] %>
  <div class="center alert">
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<div class="center">

  <div< class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>User Name:</strong> <%= @user.name %></p>  
    <p>Orders:</p>
    <ol>
    <% @user.meals.each do |meal| %>
    <li><%= meal.name %></li>
  <% end %>
    </ol>
    <p><%= link_to 'Add meal', new_meal_path %></p>
    <p><%= link_to 'Edit meal', edit_meal_path %></p>
  </div>
</div>
