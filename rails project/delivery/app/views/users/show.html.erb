<p id="notice"><%= notice %></p>



<% if flash[:message] %>
  <div class="center alert">
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<div class="center">

  <div< class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>User Name:</strong> <%= @user.name %></p>  
    <p>Orders:</p>
    
    <% @user.orders.each do |order| %> 
      <p><%= order.meal.name %></p>
      <p>quantity: <%= order.quantity %></p>
      <p><%= link_to 'Edit order', edit_order_path(order) %></p>
 
    <% end %>
    <p><%= link_to 'Add order', new_order_path %></p>
   
    
  </div>
</div>
