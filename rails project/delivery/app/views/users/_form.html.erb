<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.label :password, "password" %>
      <br>
      <%= f.password_field :password, class: "form-control" %></div>

  <div class="actions">
    <br/>
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
