<%= form_for(@meal) do |f| %>
<% if @meal.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @meal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field<%= ' field_with_errors' if @meal.errors[:name].any? %>">
  <%= label_tag "name", "name" %>
  <p>Must not be empty.</p>
  <%= text_field_tag "name", @meal.name %>
  <p>
    Please type the meal name you want.
  </p>
</div>


  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %></div>



  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
