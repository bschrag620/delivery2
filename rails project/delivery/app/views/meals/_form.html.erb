<%= form_for(@meal) do |f| %>
<% if @meal.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @meal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field<%= ' field_with_errors' if @meal.errors[:name].any? %>"> </div>
   
  <%= text_field_tag "name", @meal.name, placeholder:"enter to create a meal name"%> </div>

  <%= label_tag "Name", "warnng:Name can not be empty" %>

  <br />
  <br />
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
