<%= form_for(@order) do |f| %>
<% if @order.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field<%= ' field_with_errors' if @order.errors[:quantity].any? %>">  
</div>

  <div class="form-group">
    
    <%= f.collection_select :meal_id, Meal.all, :id, :name %>
    <%= f.select :quantity, options_for_select(1..500), { prompt: "quantity" } %>


  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
